<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>Test</servlet-name>
        <servlet-class>controller.Test</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Test</servlet-name>
        <url-pattern>/Test</url-pattern>
    </servlet-mapping>
<!--后台逻辑-->
    <!--登录逻辑-->
    <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>controller.admin.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!--用户管理-->
    <servlet>
        <servlet-name>User</servlet-name>
        <servlet-class>controller.admin.UserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>User</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
    <!--接收管理-->
    <servlet>
        <servlet-name>Donation</servlet-name>
        <servlet-class>controller.admin.DonationController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Donation</servlet-name>
        <url-pattern>/donation</url-pattern>
    </servlet-mapping>
    <!--资助管理-->
    <servlet>
        <servlet-name>Support</servlet-name>
        <servlet-class>controller.admin.SupportController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Support</servlet-name>
        <url-pattern>/support</url-pattern>
    </servlet-mapping>

    <!--前台逻辑-->
    <!--转发首页请求-->
    <servlet>
        <servlet-name>Index</servlet-name>
        <servlet-class>controller.home.IndexController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <!--查询页面-->
    <servlet>
        <servlet-name>query</servlet-name>
        <servlet-class>controller.home.QueryController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>query</servlet-name>
        <url-pattern>/query</url-pattern>
    </servlet-mapping>
    <!--统计页面-->
    <servlet>
        <servlet-name>statistics</servlet-name>
        <servlet-class>controller.home.StatisticsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>statistics</servlet-name>
        <url-pattern>/statistics</url-pattern>
    </servlet-mapping>
    <!--欢迎页面-->
    <welcome-file-list>
        <welcome-file>index</welcome-file>
    </welcome-file-list>
</web-app>